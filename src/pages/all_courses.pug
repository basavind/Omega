extends layouts/index

block meta
  title Курсы

block cover
  .head-cover(style="background-image: url('../images/curiosity.png')")

block page-wrap
  - var subtopics = ["Физика", "Химия", "Математика", "История искусства", "Музыка"];
  - var specialty = ["Теория музыки", "История музыки", "Исполнение музыки"];
  .content-wrap
    .content-head
      h1.title Курсы
      select.select(name="subtopic")
        option(value="" selected) Предмет
        for stopic in subtopics
          option
            = stopic
      select.select(name="specialty")
        option(value="" selected) Направление
        for spec in specialty
          option
            = spec
      form.search
        input.input(type="text" placeholder="Поиск")
        button.submit(type="submit")
          svg.icon.icon-loupe.loupe(role="img" title="loupe")
            use(xlink:href="icons.svg#icon-loupe")
  .content-wrap.-content
    .page-content
      .content.-wide._unpadding
        .sort-tools.sort
          .courseview-changer
            input(type="radio", name="courseview", id="cardview", checked="checked").card
            label(for="cardview")
              svg.img(role="img" title="card-menu")
                use(xlink:href="icons.svg#icon-cardmenu")
            input(type="radio", name="courseview", id="listview").list
            label(for="listview")
              svg.img(role="img" title="list-menu")
                use(xlink:href="icons.svg#icon-listmenu")
          .sortby
            span.label Сортировать по:
            select.select.select-box.-tiny
              option Названию
              option Дате добавления
              option Имени лектора
          .contains
            .form-field.field
              input.checkbox(type="checkbox" id="contains")
              label(for="contains") Содержит видео/аудио
                svg.icon.icon-check.check
                  use(xlink:href="icons.svg#icon-check")
        .courses-list.-square
          - for (var i=0; i<=10; i++)
            .course
              a(href="javascript:;")
                .img(style="background-image: url('../images/cover.jpg')")
              p
                a.teacher(href="javascript:;") Кевин Колтер
                a.title(href="javascript:;") Mechanics of Material Systems
          ._clearfix
          a.showmore(href="javascript:;") Показать еще 50